            <div type="a">
                <column>01</column>
                <head>Good News!</head>
                <origin/>
                <commentary/>
                <transcript>
                    <p/>
                </transcript>
                <trailer/>
                <names>
                    <name>
                        <ln>Baldwin</ln>
                        <fn>John B.</fn>

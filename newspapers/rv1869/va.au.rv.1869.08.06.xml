        <page n="03" image="va.au.rv.1869.08.06.03" exists="no">
            <div type="a">
                <column>01</column>
                <head>A Good Thing</head>
                <origin/>
                <commentary/>
                <transcript>
                    <p/>
                </transcript>
                <trailer/>
                <names>
                    <name>
                        <ln>Schaffer</ln>

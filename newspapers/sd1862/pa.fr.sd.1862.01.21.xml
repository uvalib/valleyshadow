                        <sf/>
                        <pf>Private</pf>
                    </name>
                    <name>
                        <ln>Eyster</ln>
                        <fn>John S.</fn>
                        <sf/>
                        <pf>Captain</pf>
                    </name>
                    <name>
                        <ln>Sample</ln>
                        <fn>John C.</fn>
                        <sf/>
                        <pf>Sergeant</pf>
                    </name>
                    <name>
                        <ln>Detrich</ln>
                        <fn>William</fn>
